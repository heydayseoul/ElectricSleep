<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/welcome_header"
            style="@style/TextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="@string/welcome_to_electricsleep" />
        
        <!--
        <TextView
            android:id="@+id/p1"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_header"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/returning_users_paragraph_one" />
        -->

        <TextView
            android:id="@+id/p2"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_header"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/returning_users_paragraph_two" />
        
        <TextView
            android:id="@+id/changes"
            style="@style/TextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p2"
            android:gravity="center_horizontal"
            android:text="What's New?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_continue_to_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:text="Continue to Tutorial" />

            <Button
                android:id="@+id/button_skip_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:text="Skip Tutorial" />
        </LinearLayout>

        <fragment
            android:name="com.androsz.electricsleepbeta.app.ChangeLogFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

    </RelativeLayout>

</ScrollView>