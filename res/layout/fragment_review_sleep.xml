<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:electricsleepbeta="http://schemas.android.com/apk/res/com.androsz.electricsleepbeta"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp"
  android:orientation="vertical" >

    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical">

        <com.androsz.electricsleepbeta.widget.SleepChart
          android:id="@+id/sleep_movement_chart"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:orientation="horizontal"
          electricsleepbeta:setScroll="true"
          style="@style/SleepChart_Light" />

        <ImageView
          android:gravity="fill_horizontal"
          android:layout_height="1dip"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="8dp"
          android:layout_width="match_parent"
          android:scaleType="fitXY"
          android:src="@drawable/divider_horizontal_holo_light" />

        <TableLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:stretchColumns="0">

            <TableRow android:background="@color/red">
                <TextView
                  android:background="@color/green"
                  android:layout_gravity="center_vertical"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/morning_feel" />
                <RatingBar
                  android:background="@color/blue"
                  android:id="@+id/morning_feel"
                  android:isIndicator="true"
                  android:layout_gravity="center_vertical"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="0dp"
                  android:layout_marginTop="0dp"
                  android:layout_width="wrap_content"
                  android:numStars="5"
                  android:padding="0dp"
                  android:paddingBottom="0dp"
                  android:paddingTop="0dp"
                  style="@style/FiveStarRatingBar.Light" />
            </TableRow>

            <TableRow>
                <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/sleep_efficiency" />
                <TextView
                  android:id="@+id/sleep_efficiency"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/total_recording_time" />
                <TextView
                  android:id="@+id/total_recording_time"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/times_disrupted" />
                <TextView
                  android:id="@+id/times_disrupted"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/time_to_fall_asleep" />
                <TextView
                  android:id="@+id/time_to_fall_asleep"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content" />
            </TableRow>
        </TableLayout>


        <TextView
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_width="match_parent"
          android:text="@string/notes"
          android:textStyle="bold" />
        <TextView
          android:id="@+id/notes"
          android:layout_height="wrap_content"
          android:layout_width="match_parent" />

    </LinearLayout>

</ScrollView>

