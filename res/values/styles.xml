<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeButton.Common" parent="@android:style/TextAppearance.Medium" />

    <style name="HomeButton" parent="@style/HomeButton.Common">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>

    <style name="TextHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary1</item>
        <item name="android:layout_margin">8dip</item>
    </style>

    <style name="TextBody" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_margin">8dip</item>
    </style>

    <style name="TextBulleted" parent="@style/TextBody">
        <item name="android:drawableLeft">@drawable/ic_bullet</item>
        <item name="android:drawablePadding">10dip</item>
    </style>

    <!-- alarmclock -->
    <style name="clock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--
         This theme is similar to the Theme.Dialog.Alert but does not rely on
		a non-public resource.
    -->
    <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <!-- calendar -->
    <style name="MonthView_DayLabel">
        <item name="android:layout_width">29dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Theme.SleepMate.Light" parent="Theme.Sherlock.Light">
        <item name="actionBarSize">@dimen/abs__action_bar_default_height</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="abBackground">@drawable/actionbar_background</item>
        <item name="abLogo">@drawable/logo_white</item>
        <item name="abTitleTextStyle">@style/ZeoActionBarTitleTextStyle</item>
        <item name="actionBarTabBarStyle">@style/ZeoActionBarTabBarStyle</item>
        <item name="actionBarTabTextStyle">@style/ZeoActionBarTabTextStyle</item>
        <item name="actionMenuTextColor">@color/actionbar_text_light</item>
        <item name="selectableItemBackground">@drawable/actionbar_item_bg</item>
        <item name="android:buttonStyle">@style/SleepMateButton.Primary</item>
        <item name="actionOverflowButtonStyle">@style/Widget.Sherlock.ActionButton.Overflow</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
    </style>

    <style name="Theme.SleepMate.Dark" parent="Theme.Sherlock">
        <item name="actionBarSize">@dimen/abs__action_bar_default_height</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="abBackground">@drawable/actionbar_background</item>
        <item name="abLogo">@drawable/logo_white</item>
        <item name="abTitleTextStyle">@style/ZeoActionBarTitleTextStyle</item>
        <item name="actionBarTabBarStyle">@style/ZeoActionBarTabBarStyle</item>
        <item name="actionBarTabTextStyle">@style/ZeoActionBarTabTextStyle</item>
        <item name="actionMenuTextColor">@color/actionbar_text_light</item>
        <item name="selectableItemBackground">@drawable/actionbar_item_bg</item>
        <item name="android:buttonStyle">@style/SleepMateButton.Primary</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
    </style>

    <style name="ZeoActionBarTabBarStyle" parent="@style/Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="ZeoActionBarTabTextStyle" parent="Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text_light</item>
    </style>

    <style name="ZeoActionBarTitleTextStyle" parent="TextAppearance.Widget.Title">
        <item name="android:textColor">@color/actionbar_text_light</item>
    </style>

    <style name="Widget.ZeoTitlePageIndicator" parent="Widget.TitlePageIndicator">
        <item name="android:background">@color/background_dark</item>
        <item name="footerColor">@color/primary1</item>
    </style>

    <style name="FiveStarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="FiveStarRatingBar.Light" parent="FiveStarRatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_light</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="FiveStarRatingBar.Dark" parent="FiveStarRatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_dark</item>
    </style>

    <style name="SleepMateButton.Common" parent="@android:style/Widget.Button" />

    <style name="SleepMateButton.Primary" parent="@style/SleepMateButton.Common">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SuggestionButton" parent="@style/SleepMateButton.Primary">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:background">@color/background_suggestions</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="SleepChart_Light">
        <item name="com.androsz.electricsleepbeta:gridAxisColor">@color/sleepchart_axis</item>
        <item name="com.androsz.electricsleepbeta:movementColor">@color/sleepchart_movement_light</item>
        <item name="com.androsz.electricsleepbeta:movementBorderColor">@color/sleepchart_movement_border_light</item>
        <item name="com.androsz.electricsleepbeta:calibrationColor">@color/sleepchart_calibration_light</item>
        <item name="com.androsz.electricsleepbeta:calibrationBorderColor">@color/sleepchart_calibration_border_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_height">@dimen/sleep_track_chart_height</item>
    </style>

    <style name="SleepChart_Dark">
        <item name="com.androsz.electricsleepbeta:gridAxisColor">@color/sleepchart_axis</item>
        <item name="com.androsz.electricsleepbeta:movementColor">@color/sleepchart_movement_dark</item>
        <item name="com.androsz.electricsleepbeta:movementBorderColor">@color/sleepchart_movement_border_dark</item>
        <item name="com.androsz.electricsleepbeta:calibrationColor">@color/sleepchart_calibration_dark</item>
        <item name="com.androsz.electricsleepbeta:calibrationBorderColor">@color/sleepchart_calibration_border_dark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_height">@dimen/sleep_track_chart_height</item>
    </style>

    <style name="TrackingProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/tracking_indeterminate_progressbar</item>
        <item name="android:minWidth">32dip</item>
        <item name="android:maxWidth">32dip</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <style name="StopTrackingButton" parent="@style/SleepMateButton.Primary">
        <item name="android:drawableLeft">@drawable/ic_tracking_stop</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:textAppearance">@style/StopTrackingTextAppearance</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:paddingRight">25dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

    <style name="StopTrackingTextAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WarningButton">
        <item name="com.androsz.electricsleepbeta:porterDuffTint">@color/warning_tint</item>
        <item name="android:drawableLeft">@drawable/ic_unplugged_bang</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

</resources>