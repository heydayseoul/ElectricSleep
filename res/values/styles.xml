    <style name="HomeButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary1</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textSize">0dp</item>
		<item name="android:background">@null</item>
    </style>

    <style name="AppwidgetButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TitleBarAction">
        <item name="android:layout_width">@dimen/title_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/title_button</item>
    </style>

    <style name="TitleBarProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">14dip</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="TitleBarSeparator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/titlebar_separator</item>
    </style>

    <style name="TitleBarSpring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TitleBarText">
        <item name="android:id">@id/title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GroupLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/primary1</item>
        <item name="android:background">@drawable/gradient_lighten</item>
    </style>

    <style name="ListItem">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

    <style name="TextHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary1</item>
    </style>

    <style name="TextHeaderTwo" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextBody" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <!-- alarmclock -->
    <style name="clock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--
         This theme is similar to the Theme.Dialog.Alert but does not rely on
		a non-public resource.
    -->
    <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <!-- calendar -->
    <style name="MonthView_DayLabel">
        <item name="android:layout_width">29dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textAppearance">@style/TextAppearance_MonthView_DayLabel</item>
    </style>

    <style name="TextAppearance_MonthView_DayLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/daynames_text_color</item>
    </style>

    <style name="CalendarTheme" parent="android:Theme.Black">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SleepMate" parent="Theme.Sherlock">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="abBackground">@drawable/actionbar_background</item>
        <item name="abLogo">@drawable/logo_white</item>
        <item name="actionBarTabStyle">@style/ZeoActionBarTabStyle</item>
        <item name="selectableItemBackground">@drawable/actionbar_item_bg</item>
    </style>

    <style name="Theme.SleepMate.Light" parent="Theme.Sherlock.Light">
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_light</item>

        <item name="abBackground">@drawable/actionbar_background</item>
        <item name="abLogo">@drawable/logo_white</item>
        <item name="abTitleTextStyle">@style/ZeoActionBarTitleTextStyle</item>
        <item name="actionBarTabStyle">@style/ZeoActionBarTabStyle</item>
        <item name="actionBarTabBarStyle">@style/ZeoActionBarTabBarStyle</item>
        <item name="actionBarTabTextStyle">@style/ZeoActionBarTabTextStyle</item>
        <item name="actionMenuTextColor">@color/actionbar_text_light</item>
        <item name="selectableItemBackground">@drawable/actionbar_item_bg</item>
    </style>

    <style name="ZeoActionBarTabStyle" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/zeo_tab_indicator_holo</item>
    </style>

    <style name="ZeoActionBarTabBarStyle" parent="@style/Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="ZeoActionBarTabTextStyle" parent="Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text_light</item>
    </style>

    <style name="ZeoActionBarTitleTextStyle" parent="TextAppearance.Widget.Title">
        <item name="android:textColor">@color/actionbar_text_light</item>
    </style>
</resources>